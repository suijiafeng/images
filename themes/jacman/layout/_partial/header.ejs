<header class="main-header" <% if(theme.banner.img){ %> style="background-image:url(
    <%= theme.banner.img %>)"
        <%}%> >
            <div class="container">
                <nav class="main-navigation">
                    <div class="navbar-header">
                        <span class="nav-toggle-button collapsed" data-toggle="collapse" data-target="#main-menu" id="mnav">
                            <span class="sr-only"></span>
                            <i class="fa fa-bars"></i>
                        </span>
                    </div>
                    <div class="collapse navbar-collapse " id="main-menu">
                        <ul class="menu">
                            <% theme.menu.forEach(function (item) {%>
                                <li role="presentation" class="text-center">
                                    <a href="<%- item.url%>">
                                        <i class="fa <%- item.icon%>"></i>
                                        <%= __(item.page+'') %>
                                    </a>
                                </li>
                                <%})%>
                        </ul>
                    </div>
           
            </nav>
      
            <div class="main-header-box">
                <a class="header-avatar" href="/" title='<%= config.author %>'>
                    <%- image_tag('img/avatar.jpg',{alt:'logo头像',class:'img-responsive'}) %>
                </a>
                <div class="branding">
                    <!--<h2 class="text-hide">Snippet主题,从未如此简单有趣</h2>-->
                    <% if(theme.branding){ %>
                        <h2>
                            <%= theme.branding %>
                        </h2>
                        <% } else { %>
                            <%- image_tag('img/branding.png',{alt:'Snippet 博客主题',class:'img-responsive'}) %>
                                <% } %>
                </div>
            </div>
        </div>
</header>